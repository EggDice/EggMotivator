{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@app/*": ["app/*"],
      "@notification/*": ["notification/*"],
      "@schedule/*": ["schedule/*"],
      "@alert/*": ["alert/*"],
      "@metric/*": ["metric/*"],
      "@expo-app/*": ["expo-app/*"]
    }
  }
}
